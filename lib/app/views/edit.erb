<html>
  <head>
    <title>IdeaBox</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

    <form action='/<%= idea.id %>' method='POST'>
      <p>
        <% if idea.id %>
          Edit your Idea:
        <% else %>
          Your Idea:
        <% end %>
      </p>
      <% if idea.id %>
        <input type="hidden" name="_method" value="PUT" />
      <% end %>
      <input id = "edit_title" type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
      <textarea id = "edit_desc" name='idea[description]'><%= idea.description %></textarea><br/>
      <center><input id = "button" type='submit'/></center>
    </form>
  </body>
</html>